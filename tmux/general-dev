tmux has-session -t general_dev
if [ $? != 0 ]
then
	#editor

	tmux new-session -s general_dev -n editor -d

	tmux split-window -v -l 12 -t general_dev # split vertical current window to 2 pane. `l` is length
	tmux split-window -h -t general_dev:1.2 # split pane 2 of window 1 to 2 panes
	tmux send-keys -t general_dev:1.1 'nvim' C-m # launch neovim in pane 1 of window 1

	# console and local server log

	tmux new-window -n local -t general_dev

	# server
	tmux new-window -n server -t general_dev
	tmux split-window -h -t general_dev

	# display first window of the session

	tmux select-window -t general_dev:1
	tmux select-pane -t 1
fi
tmux attach -t general_dev

